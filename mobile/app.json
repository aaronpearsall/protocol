{
  "expo": {
    "name": "Protocol",
    "slug": "protocol",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.protocol.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Protocol needs access to your photo library to save workout images.",
        "NSCameraUsageDescription": "Protocol needs access to your camera to capture workout photos.",
        "NSLocationWhenInUseUsageDescription": "Protocol uses your location to show nearby events and gyms."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.protocol.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "protocol",
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}

